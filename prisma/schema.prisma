generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(uuid())
  title     String
  done      Boolean  @default(false)
  priority  Int      @default(5) // 1..10
  createdAt DateTime @default(now())
  category  String?
}
